<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".application.signin.view.SignInFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textview_terms_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/tc"
            android:textColor="@color/txtColor"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/textview_separating_with_or"
            app:layout_constraintTop_toTopOf="@+id/textview_separating_with_or" />

        <TextView
            android:id="@+id/textview_agreement_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/agree"
            android:textColor="@color/txtDisColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/textview_separating_with_or"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textview_separating_with_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="@string/and"
            android:textColor="@color/txtDisColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textview_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/pp"
            android:textColor="@color/txtColor"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/textview_separating_with_or"
            app:layout_constraintTop_toTopOf="@+id/textview_separating_with_or" />

        <Button
            android:id="@+id/button_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_enter_mode"
            android:text="@string/signup"
            android:textColor="@color/txtDisColor"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/scroll_container_enter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/signin_buttons_horizontal_separator"
            app:layout_constraintTop_toTopOf="@+id/signin_buttons_horizontal_separator" />

        <ImageView
            android:id="@+id/imageview_header_logo"
            android:layout_width="55.26dp"
            android:layout_height="51.63dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_logo" />

        <Button
            android:id="@+id/button_log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_enter_mode"
            android:text="@string/login"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/signin_buttons_horizontal_separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_header_logo" />

        <View
            android:id="@+id/signin_buttons_horizontal_separator"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_log_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_log_in" />

        <ScrollView
            android:id="@+id/scroll_container_enter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/textview_agreement_sentence"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signin_buttons_horizontal_separator">


            <FrameLayout
                android:id="@+id/fragment_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>